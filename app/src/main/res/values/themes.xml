<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Abcdef" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseWhiteTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_white</item>
        <item name="colorAccent">@color/app_white</item>
        <item name="colorControlNormal">@color/app_white</item>
        <item name="backgroundColor">@color/app_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/app_white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/app_white</item>

    </style>


    <style name="ToolbarTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="lineHeight">26dp</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

</resources>